<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundlogin"
    tools:context=".Ui.Activity.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:paddingBottom="10dp"
        android:clipToPadding="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >
                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:src="@drawable/logo"
                    android:id="@+id/logo"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:id="@+id/view"
                    app:layout_constraintRight_toLeftOf="@id/logo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@color/black1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginRight="@dimen/_15ssp"
                    android:id="@+id/appname"
                    android:textColor="@color/black"
                    android:text="@string/app_name"
                    android:background="@color/yellow"
                    android:fontFamily="@font/gg_ss"
                    app:layout_constraintRight_toLeftOf="@id/view"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_4sdp"
                app:cardBackgroundColor="@color/white"
                app:contentPadding="@dimen/_10sdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                <EditText
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:id="@+id/ed_email"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:drawableRight="@drawable/custom_email_icon"
                    android:drawablePadding="@dimen/_10sdp"
                    app:fontFamily="@font/boutrosmbcinkmmedium"
                    android:hint="@string/email"
                    android:textSize="@dimen/_14ssp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textDirection="rtl"
                    />

                <LinearLayout
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:orientation="horizontal"
                    android:layoutDirection="ltr"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <EditText
                            android:layout_width="@dimen/_240sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:id="@+id/ed_password"
                            android:inputType="textPassword"
                            android:layout_gravity="left"
                            app:fontFamily="@font/boutrosmbcinkmmedium"
                            android:hint="@string/password"
                            android:textSize="@dimen/_14ssp"
                            android:drawableLeft="@drawable/custom_password_icon"
                            android:drawablePadding="@dimen/_10sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:textDirection="ltr"
                            android:layoutDirection="ltr"
                            />
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/framelayout"
                            android:layout_gravity="center|right"
                            android:layoutDirection="rtl"
                            android:paddingRight="@dimen/_10sdp"
                            android:visibility="invisible"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/visibiltyoff"
                                android:visibility="visible"
                                android:src="@drawable/ic_visibiltyoff"
                                android:onClick="Visibiltyoff_Password"
                                tools:ignore="OnClick"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/visibilty"
                                android:src="@drawable/ic_visibilty"
                                android:visibility="invisible"
                                android:onClick="Visibilty_Password"
                                tools:ignore="OnClick"
                                />
                        </FrameLayout>
                    </FrameLayout>
                </LinearLayout>

                <Button
                    android:layout_width="@dimen/_230sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:text="@string/login_btn"
                    android:fontFamily="@font/gg_ss"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:id="@+id/btn_login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_login_btn"
                    android:foreground="?android:attr/selectableItemBackground"
                    />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
    </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>