<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.Activity.EditPassword">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:paddingBottom="10dp"
        android:clipToPadding="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_4sdp"
                app:cardBackgroundColor="@color/white"
                app:contentPadding="@dimen/_10sdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:orientation="horizontal"
                        android:layoutDirection="ltr"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <EditText
                                android:layout_width="@dimen/_240sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:id="@+id/ed_oldpassword"
                                android:inputType="textPassword"
                                android:layout_gravity="left"
                                app:fontFamily="@font/boutrosmbcinkmmedium"
                                android:hint="@string/editpassword_old_password"
                                android:textSize="@dimen/_14ssp"
                                android:drawableLeft="@drawable/custom_password_icon"
                                android:drawablePadding="@dimen/_10sdp"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:textDirection="ltr"
                                android:layoutDirection="ltr"
                                />
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/framelayout_oldpassword"
                                android:layout_gravity="center|right"
                                android:layoutDirection="rtl"
                                android:paddingRight="@dimen/_10sdp"
                                android:visibility="invisible"
                                >
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/visibiltyoff_oldpassword"
                                    android:visibility="visible"
                                    android:src="@drawable/ic_visibiltyoff"
                                    />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/visibilty_oldpassword"
                                    android:src="@drawable/ic_visibilty"
                                    android:visibility="invisible"
                                    />
                            </FrameLayout>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:orientation="horizontal"
                        android:layoutDirection="ltr"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <EditText
                                android:layout_width="@dimen/_240sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:id="@+id/ed_newpassword"
                                android:inputType="textPassword"
                                android:layout_gravity="left"
                                app:fontFamily="@font/boutrosmbcinkmmedium"
                                android:hint="@string/editpassword_onew_password"
                                android:textSize="@dimen/_14ssp"
                                android:drawableLeft="@drawable/custom_password_icon"
                                android:drawablePadding="@dimen/_10sdp"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:textDirection="ltr"
                                android:layoutDirection="ltr"
                                />
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/framelayout_newpassword"
                                android:layout_gravity="center|right"
                                android:layoutDirection="rtl"
                                android:paddingRight="@dimen/_10sdp"
                                android:visibility="invisible"
                                >
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/visibiltyoff_newpassword"
                                    android:visibility="visible"
                                    android:src="@drawable/ic_visibiltyoff"
                                    />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/visibilty_newpassword"
                                    android:src="@drawable/ic_visibilty"
                                    android:visibility="invisible"
                                    />
                            </FrameLayout>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:orientation="horizontal"
                        android:layoutDirection="ltr"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <EditText
                                android:layout_width="@dimen/_240sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:id="@+id/ed_new_confirm_password"
                                android:inputType="textPassword"
                                android:layout_gravity="left"
                                app:fontFamily="@font/boutrosmbcinkmmedium"
                                android:hint="@string/editpassword_new_password_confirm"
                                android:textSize="@dimen/_14ssp"
                                android:drawableLeft="@drawable/custom_password_icon"
                                android:drawablePadding="@dimen/_10sdp"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:textDirection="ltr"
                                android:layoutDirection="ltr"
                                />
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/framelayout_new_password_confirm"
                                android:layout_gravity="center|right"
                                android:layoutDirection="rtl"
                                android:paddingRight="@dimen/_10sdp"
                                android:visibility="invisible"
                                >
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/visibiltyoff_new_password_confirm"
                                    android:visibility="visible"
                                    android:src="@drawable/ic_visibiltyoff"
                                    />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/visibilty_new_password_confirm"
                                    android:src="@drawable/ic_visibilty"
                                    android:visibility="invisible"
                                    />
                            </FrameLayout>
                        </FrameLayout>
                    </LinearLayout>


                        <Button
                            android:layout_width="@dimen/_230sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:text="@string/editprofile_btn"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/gg_ss"
                            android:id="@+id/btn_editpassword"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13ssp"
                            android:layout_gravity="center"
                            android:background="@drawable/custom_login_btn"
                            android:foreground="?android:attr/selectableItemBackground"
                            />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>