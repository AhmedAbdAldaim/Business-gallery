<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="MissingConstraints">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:textDirection="rtl"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                app:layout_constraintRight_toLeftOf="@id/image_username"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="@dimen/_5sdp"
                android:text="مصعب عبد الرحمن"
                android:fontFamily="@font/gg_ss"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/type"
                app:layout_constraintRight_toLeftOf="@id/image_username"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/username"
                android:text="مصصم"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawableRight="@drawable/ic_checked"
                android:drawablePadding="@dimen/_3sdp"
                android:fontFamily="@font/gg_ss"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:layout_gravity="right|center_horizontal"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:id="@+id/image_username"
                android:src="@drawable/logo"
                android:scaleType="centerCrop"
                android:layout_gravity="right"
                app:civ_border_color="@color/blue1"
                app:civ_border_width="2dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/menue"
                android:padding="@dimen/_5sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_list"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_300sdp"
                    android:id="@+id/image"
                    android:importantForAutofill="yes"
                    android:scaleType="centerCrop"
                    />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/image_title"
                android:drawableRight="@drawable/ic_image_name_unfoucs"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="بيكتسو"
                android:fontFamily="@font/gg_ss"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textDirection="rtl"
                />
            <com.borjabravo.readmoretextview.ReadMoreTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/image_details"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableRight="@drawable/ic_image_detailes_unfoucs"
                android:drawablePadding="@dimen/_5sdp"
                android:text="بيكتسو "
                app:trimExpandedText="@string/shom_less"
                app:trimCollapsedText="@string/shom_more"
                app:trimLines="4"
                app:trimMode="trimModeLine"
                app:colorClickableText="@color/blue1"
                android:fontFamily="@font/gg_ss"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textDirection="rtl"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@color/black1"/>

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="@dimen/_10sdp"
                android:layout_marginRight="10dp"
                android:text="@string/active"
                android:id="@+id/total_love"
                android:drawableRight="@drawable/ic_love"
                android:drawablePadding="@dimen/_5sdp"
                 android:visibility="gone"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layoutDirection="rtl"
                >
                <ImageView
                    android:layout_width="@dimen/_25ssp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="right"
                    app:layout_constraintRight_toLeftOf="@id/framelayout_likes"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:id="@+id/comments"
                    android:src="@drawable/ic_instagram_comment"
                    />
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/framelayout_likes"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="right"
                        android:visibility="visible"
                        android:id="@+id/love_border"
                        android:src="@drawable/ic_love_border"
                        />
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="right"
                        android:id="@+id/love"
                        android:visibility="invisible"
                        android:src="@drawable/ic_love"
                        />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_price"
                    android:drawableRight="@drawable/ic_image_price"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="3000"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:fontFamily="@font/boutrosmbcinkmmedium"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/red1"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textDirection="rtl"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/grey"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
