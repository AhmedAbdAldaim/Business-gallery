<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.Activity.EditProfile">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:paddingBottom="10dp"
        android:clipToPadding="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_4sdp"
                app:cardBackgroundColor="@color/white"
                app:contentPadding="@dimen/_10sdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                            <FrameLayout
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:layout_gravity="center"
                                >

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:id="@+id/image_doctor"
                                android:layout_gravity="center"
                                android:src="@drawable/logo"
                                app:civ_border_color="@color/black"
                                app:civ_border_width="@dimen/_2sdp"
                                />
                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:padding="@dimen/_5sdp"
                                    android:layout_gravity="bottom|left"
                                    app:cardElevation="@dimen/_5sdp"
                                    android:id="@+id/editprofile_cardview"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    app:cardCornerRadius="15dp"
                                    tools:ignore="MissingConstraints">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|center_horizontal"
                                android:src="@drawable/ic_edit"
                                android:background="@color/white"
                                tools:ignore="MissingConstraints" />
                                </androidx.cardview.widget.CardView>
                            </FrameLayout>

                    <EditText
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:id="@+id/ed_name"
                        android:inputType="text"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:drawableRight="@drawable/custom_person_icon"
                        android:drawablePadding="@dimen/_10sdp"
                        app:fontFamily="@font/gg_ss"
                        android:hint="@string/editprofile_name"
                        android:textSize="@dimen/_14ssp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textDirection="rtl"
                        />

                    <EditText
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:id="@+id/ed_email"
                        android:inputType="textEmailAddress"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:drawableRight="@drawable/custom_email_icon"
                        android:drawablePadding="@dimen/_10sdp"
                        app:fontFamily="@font/gg_ss"
                        android:hint="@string/editprofile_email"
                        android:textSize="@dimen/_14ssp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textDirection="rtl"
                        />
                    <FrameLayout
                        android:layout_width="@dimen/_230sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_15sdp"
                        >
                    <Button
                        android:layout_width="@dimen/_230sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="@string/editprofile_btn"
                        app:fontFamily="@font/gg_ss"
                        android:id="@+id/btn_edit_transparent"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13ssp"
                        android:layout_gravity="center"
                        android:focusable="false"
                        android:enabled="false"
                        android:background="@drawable/custom_btn_transparent"
                        android:foreground="?android:attr/selectableItemBackground"
                       />
                    <Button
                        android:layout_width="@dimen/_230sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="@string/editprofile_btn"
                        android:fontFamily="@font/gg_ss"
                        android:id="@+id/btn_editprofile"
                        android:visibility="invisible"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13ssp"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_login_btn"
                        android:foreground="?android:attr/selectableItemBackground"
                       />
                    </FrameLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:id="@+id/btn_editpassword"
                        android:text="@string/Editpassword"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp"
                        android:fontFamily="@font/gg_ss"
                        android:onClick="EditPassword_btn"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>